<%- include("partials/head", { bot, user, path, description, title, twitter, url, image }) %>

<% function capitalize(string) { return string.charAt(0).toUpperCase() + string.slice(1); } %>

<% if (bot.user.avatar) { botavatar = "https://cdn.discordapp.com/avatars/" + bot.user.id + "/" + bot.user.avatar + ".png?size=512";
 } else {
 botavatar = "https://" + hostname + "/pics/invaild-avatar.png"; } %>
<section class="hero-section">
 <div class="hero-grid">
 <div class="hero-content">
 <img class="img" src="<%= botavatar %>" alt="Avatar" />
 <% if (user) { %>
  <p class="hero-title">Yay!</p>
  <p class="hero-title2">Bot has Need Connected to your Discord Account! Now Click on Dashboard to Invite Me to your Server!</p>
  <a href="https://<%= domain %>/dashboard" class="link-button green reload"><span class="reload-container"><svg xmlns="http://www.w3.org/2000/svg" style="margin-left: 0;margin-right: 5px;" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0z" fill="none"></path><path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"></path></svg>Dashboard</span></a>
  <% } else { %>
  <p class="hero-title">Hi! I'm <%= capitalize(bot.user.username) %></p>
  <p class="hero-title2">I have almost everything - Fun, Memes, Images, Giveaway, Anime and NSFW!<br />I serve over 150 commands<br />To get started with me just Login and Login with your Discord account</p>
  <a href="https://<%= domain %>/login" class="link-button green">Login</a>
  <a href="#feautures" class="link-button">More</a>
  <% } %>
 </div>
 </div>
</section>
<section class="section-feautures">
<h2 id="feautures">Feautures</h2>
<div class="content-container">
<div class="card-row content-container">
<div class="card-image"><img src="https://<%= domain %>/pics/cards/image.png"></div>
<div class="card-text">
<h3 class="card-title">Images</h3>
<p><%= capitalize(bot.user.username) %> allows you to make your custom images (or even memes!), <%= capitalize(bot.user.username) %> also can display random images for you!</p>
</div>
</div>
</div>
</section>

